{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "displayName": { "type": "string", "description": "The user's display name." },
        "photoURL": { "type": "string", "format": "uri", "description": "URL of the user's profile picture." }
      },
      "required": ["uid", "email"]
    },
    "FavoriteRecipe": {
      "title": "Favorite Recipe",
      "description": "Represents a recipe that a user has marked as a favorite.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique ID for the recipe."},
        "name": { "type": "string" },
        "shortDescription": { "type": "string" },
        "prepTime": { "type": "string" },
        "cookTime": { "type": "string" },
        "servings": { "type": "string" },
        "difficulty": { "type": "string", "enum": ["Easy", "Medium", "Hard"] },
        "cuisine": { "type": "string" },
        "calories": { "type": "number" },
        "ingredients": { "type": "array", "items": { "type": "string" } },
        "instructions": { "type": "string" },
        "image": { "type": "string", "format": "uri" },
        "imageHint": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "ingredients", "instructions"]
    },
    "ShoppingListItem": {
      "title": "Shopping List Item",
      "description": "A single ingredient in a user's shopping list.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "The name of the ingredient." }
      },
      "required": ["name"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}/favorites/{favoriteId}": {
      "schema": { "$ref": "#/entities/FavoriteRecipe" },
      "description": "Stores a user's favorite recipes."
    },
    "/users/{userId}/shoppingList/{itemId}": {
      "schema": { "$ref": "#/entities/ShoppingListItem" },
      "description": "Stores items in a user's shopping list."
    }
  }
}
